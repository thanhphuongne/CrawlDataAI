# Environment
NODE_ENV=development
# For production, change to: NODE_ENV=production

# PostgreSQL Database
DB_CONNECTION=postgres
DB_HOST_WRITE=localhost
DB_HOST_READ=localhost
DB_PORT=5432
DB_DATABASE=crawldataai
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# MongoDB
MONGO_URI=mongodb://localhost:27017/crawldataai
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname

# Server Configuration
SERVER_PORT=3001
SERVER_ORIGIN=http://localhost:3000
# For production, set specific domain: SERVER_ORIGIN=https://yourdomain.com
USE_EXPRESS_HOST_STATIC_FILE=true
RUN_CRON_JOB=yes
API_DOCS_HOST=localhost:3001
UPLOAD_GET_HOST=http://localhost:3001
FRONTEND_HOST=http://localhost:3000
LOGO_URL=http://localhost:3000/images/logo/brand.png

# JWT Secrets - MUST CHANGE IN PRODUCTION!
# Generate secure keys: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
USER_JWT_SECRET_KEY=your_super_secret_jwt_key_min_32_chars_production_change_this
USER_JWT_SECRET_KEY_FORGOT_PASSWORD=your_super_secret_forgot_password_key_min_32_chars_production

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=CrawlDataAI

# Google AI (Gemini)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Logging
LOG_LEVEL=debug
BABEL_DISABLE_CACHE=1

# PRODUCTION CHECKLIST:
# ✅ Change NODE_ENV to 'production'
# ✅ Set strong JWT secrets (64+ characters)
# ✅ Set SERVER_ORIGIN to your actual domain
# ✅ Set FRONTEND_HOST to your actual frontend URL
# ✅ Use strong database passwords
# ✅ Configure SendGrid with verified domain
# ✅ Enable HTTPS (secure: true in cookies)
# ✅ Set up proper MongoDB URI with authentication
